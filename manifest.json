{
  "manifest_version": 3,
  "name": "高規格道路",
  "version": "2.1.0",
  "description": "世界最高レベルの道路を誇る高規格道路で、速度を守りながら、楽しく走行できます。",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "offline_enabled": false,
  "content_scripts": [
    {
      "matches": [
        "https://*.mc2.osakac.ac.jp/*"
      ],
      "js": [
        "content-script.js"
      ],
      "css": [
        "content-style.css"
      ]
    },
    {
      "matches": [
        "https://*.mc2.osakac.ac.jp/*/login/index.php"
      ],
      "js": [
        "login.js"
      ]
    },
    {
      "matches": [
        "https://*.mc2.osakac.ac.jp/*/course/*"
      ],
      "js": [
        "course.js"
      ]
    },
    {
      "matches": [
        "https://*.mc2.osakac.ac.jp/*/mod/assign/view.php?id=*",
        "https://*.mc2.osakac.ac.jp/*/mod/quiz/view.php?id=*",
        "https://*.mc2.osakac.ac.jp/*/mod/feedback/view.php?id=*"
      ],
      "js": [
        "assign.js"
      ]
    },
    {
      "matches": [
        "https://*.mc2.osakac.ac.jp/*/*"
      ],
      "html": [
        "timeTable.html"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "main.js"
  }
}